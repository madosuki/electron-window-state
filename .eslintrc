{
    "env": {
        "jasmine": true,
        "node": true,
        "mocha": true,
        "browser": true,
        "builtin": true,
        "es6": true
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "indent": ["error", 4],
        "camelcase": 2,
        "curly": [ 2, "all" ],
        "dot-notation": [ 2, { "allowKeywords": true } ],
        "eqeqeq": [ 2, "allow-null" ],
        "strict": [ 2, "global" ],
        "guard-for-in": 2,
        "new-cap": 2,
        "no-bitwise": 2,
        "no-caller": 2,
        "no-cond-assign": [ 2, "except-parens" ],
        "no-console": 1,
        "no-duplicate-case": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 1,
        "no-extra-semi": 1,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 1,

        "no-debugger": 2,
        "no-empty": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-irregular-whitespace": 2,
        "no-iterator": 2,
        "no-loop-func": 2,
        "no-multi-str": 2,
        "no-new": 2,
        "no-proto": 2,
        "no-script-url": 2,
        "no-sequences": 2,
        "no-shadow": 2,
        "no-undef": 2,
        "no-unused-vars": "off",
        "no-with": 2,
        "@typescript-eslint/no-unused-vars": ["error"],
        "quotes": [ 2, "single" ],
        "semi": [ 0, "always" ],
        "block-scoped-var": 2,
        "wrap-iife": [ 2, "inside" ]
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    }
}
